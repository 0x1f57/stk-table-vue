{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "sourceMap": true,
        "checkJs": false,
        "baseUrl": ".",
        "moduleResolution": "node",
        "jsxImportSource": "vue",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "ScriptHost"
        ],
        "paths": {
            "@/*": [
                "../src/*"
            ]
        },
    },
    "include": [
        "./**/*.vue",

    ],
    "exclude": [
    ]
}